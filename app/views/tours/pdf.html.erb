<!doctype html>
<html>
  <head>
    <meta charset='utf-8' />
  </head>
  <body>
    <div id="content">
      <style>
		table {
		  border-width: 0;
		  border-style: none;
		  border-color: #0000ff;
		  border-collapse: collapse;
		  margin-bottom: 30px;
		}

		td {
		  border-left: solid 10px #000;
		  padding: 0;
		  margin: 0;
		  width: 0px;
		  height: 10px;
		}

		.center-align{
			align: center;
		}

		td.black { border-color: #000; }
		td.white { border-color: #fff; }
		.page-break { display:block; clear:both; page-break-after:always; }
	</style>
	<div class="page-break">
		<h2 class="center-align"><%= @tour.name %></h2>
		<h3><%= @audience.name %></h3>
	</div>
	<% @tour_points.each do |tp| %>
		<div class="page-break">
			<%= tp[:rank].to_s + ". " + tp[:name] %>
			<%= raw tp[:qr_code].as_html %>
			<div>
				<h4>Notes:</h4>
				<p>Notes will go here</p>
			</div>
		</div>
	<% end %>


    </div>
  </body>
</html>

