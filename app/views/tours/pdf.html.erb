<!doctype html>
<html>
  <head>
    <meta charset='utf-8' />
  </head>
  <body>
    <div id="content">
      <style>
		table {
		  border-width: 0;
		  border-style: none;
		  border-color: #0000ff;
		  border-collapse: collapse;
		  margin-bottom: 30px;
		}

		td {
		  border-left: solid 10px #000;
		  padding: 0;
		  margin: 0;
		  width: 0px;
		  height: 10px;
		}

		.center{
			text-align: center;
		}

    .underline{
      text-decoration: underline;
    }

    .qr-center{
      display: block;
      margin-left: 200px;
    }

    .session-table{
      width: 100%;
    }

    .session-table td, .session-table th {
        padding: 2px;
        border: 1px solid black;
    }

		td.black { border-color: #000; }
		td.white { border-color: #fff; }
		.page-break { display:block; clear:both; page-break-after:always; }
	</style>
	<div class="page-break">
    <h1 class="center underline">Tour</h1>
		<h1 class="center underline"><%= @tour.name %></h1>
		<h3>For: <%= @audience.name %></h3>
    <h4 class="underline">Tour Sessions</h4>
    <table class="session-table">
      <thead>
        <tr>
          <th>Session Name</th>
          <th>Start Date</th>
          <th>Duration</th>
          <th>Passphrase</th>
        </tr>
      </thead>
      <tbody>
        <% @tour_sessions.each do |session| %>
          <tr>
            <td><%= session['name'] %></td>
            <td><%= session['start_date'] %></td>
            <td><%= session['duration'] %> days</td>
            <td>SN<%= session['passphrase'] %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
	</div>
  <div class="page-break">
    <h2 class="center underline">Notes</h2>
    <%= @tour.notes.html_safe if @tour.notes %>
  </div>
	<% @tour_points.each do |tp| %>
		<div class="page-break">
			<h2 class="center underline"><%= tp[:rank].to_s + ". " + tp[:name] %></h2>
			<div class="qr-center"><%= raw tp[:qr_code].as_html %></div>
      <h3 class="center">Alternatively input: POINT-<%= tp[:id] %></h3>
			<div>
				<h4>Description</h4>
				<p><%= tp[:description] %></p>
			</div>
		</div>
	<% end %>


    </div>
  </body>
</html>
